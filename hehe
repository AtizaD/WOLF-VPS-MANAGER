    echo -e "\033[1;33m[\033[1;31mErro\033[1;33m] \033[1;37m- \033[1;33mâ—‡ YOU NEED TO RUN AS ROOT!\033[0m"
    rm $HOME/hehe > /dev/null 2>&1
    exit 0
}

