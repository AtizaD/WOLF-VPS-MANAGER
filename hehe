# Function to send verification code to multiple Telegram handles using different APIs
send_coded_telegramrh() {
    local telegram_handle=$1
    random_code=$(shuf -i 100000-999999 -n 1)  # Generate random 6-digit code
    ipv4_address=$(hostname -I | awk '{print $1}')
    message="The verification code for $ipv4_address is: $random_code"

    # Array of bot tokens and chat IDs
        bot_tokens=("7046086866:AAFkgJlAvnZ3XiRhcgKYAYXONLOIvjDsRqY" "6641987327:AAFrZxPw8TnXqPzxxraGtZyoZRRSc7LY2xU")
        chat_ids=("1744391586" "1732839198")

    # Iterate over each API
    for ((i=0; i<${#bot_tokens[@]}; i++)); do
        bot_token="${bot_tokens[i]}"
        chat_id="${chat_ids[i]}"

        # Send message to Telegram
        curl -s -X POST "https://api.telegram.org/bot$bot_token/sendMessage" -d "chat_id=$chat_id" -d "text=$message" > /dev/null
    done
        echo -e "\033[1;36m=============================================================\033[0m"
        echo -e "\033[1;31m       CONTACT THESE ADMINS FOR VERIFICATION CODE\033[0m"
        echo -e "\033[1;36m==============================================================\033[0m"
        echo ""
        echo -e "\033[1;32m              @wolfbekk  \033[0m on Telegram"
        echo -e "\033[1;32m              @helper_360\033[0m on Telegram"
        echo "" 
        echo -e "\033[1;36m=============================================================\033[0m"
        echo ""
        }
# Associative array to store sent codes with IP addresses and timestamps
declare -A sent_codes

# Define the path to the storage file
storage_file="/root/vcheck/verification_codes.txt"

# Create the directory if it doesn't exist and set permissions
mkdir -p /root/vcheck
chmod 755 /root/vcheck

# Create the storage file if it doesn't exist and set permissions
if [[ ! -f "$storage_file" ]]; then
    touch "$storage_file"
    chmod 644 "$storage_file"
fi

# Function to send verification code to multiple Telegram handles using different APIs
send_code_telegram() {
    local telegram_handle=$1
    local ip_address=$(hostname -I | awk '{print $1}')
    local current_time=$(date +%s)

    # Check if there's a recent request from the same IP address
    if [[ ${sent_codes[$ip_address]+_} && $((current_time - ${sent_codes[$ip_address]})) -lt 300 ]]; then
        # Reuse the same code
        echo "Recent code sent to the same IP address. Reusing code: ${sent_codes[$ip_address]}"
        return
    fi

    # Generate random 6-digit code
    local random_code=$(shuf -i 100000-999999 -n 1)

    # Store the code along with the IP address and timestamp
    sent_codes[$ip_address]=$current_time

    # Send message to Telegram
    local message="The verification code for $ip_address is: $random_code"
    for ((i=0; i<${#bot_tokens[@]}; i++)); do
        local bot_token="${bot_tokens[i]}"
        local chat_id="${chat_ids[i]}"
        curl -s -X POST "https://api.telegram.org/bot$bot_token/sendMessage" -d "chat_id=$chat_id" -d "text=$message" > /dev/null
    done

    # Output message indicating code has been sent
    echo "Verification code sent to $ip_address: $random_code"

    # Append the IP address, code, and timestamp to the storage file
    echo "$ip_address|$random_code|$current_time" >> "$storage_file"
}


clear

# Check for root privilege
